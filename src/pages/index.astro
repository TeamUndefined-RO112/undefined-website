---
import Carousel from '../components/Carousel.svelte';
import Content from '../components/Content.svelte';
import HomeImage from '../components/HomeImage.svelte';
import TextBox from '../components/TextBox.svelte';
import Title from '../components/Title.svelte';
import Button from '../components/Button.svelte';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Team Undefined">

	<!-- Quadcopter Drone -->
	<div class="quadcopter" id="quadcopter">
		<div class="drone-body">
			<div class="drone-arm"></div>
			<div class="drone-arm"></div>
			<div class="drone-arm"></div>
			<div class="drone-arm"></div>
			<div class="drone-propeller"></div>
			<div class="drone-propeller"></div>
			<div class="drone-propeller"></div>
			<div class="drone-propeller"></div>
			<div class="drone-light"></div>
		</div>
	</div>

	<!-- UFO -->
	<div class="ufo" id="ufo">
		<div class="ufo-body">
			<div class="ufo-dome"></div>
			<div class="ufo-lights">
				<div class="ufo-light"></div>
				<div class="ufo-light"></div>
				<div class="ufo-light"></div>
				<div class="ufo-light"></div>
			</div>
			<div class="ufo-beam"></div>
		</div>
	</div>

	<script>
		// Quadcopter flight animation (original)
		const quadcopter = document.getElementById('quadcopter');
		if (quadcopter) {
			function flyDrone() {
				// Random start position
				const startX = Math.random() < 0.5 ? -100 : window.innerWidth + 100;
				const startY = 100 + Math.random() * (window.innerHeight * 0.4);

				// Random end position (opposite side)
				const endX = startX < 0 ? window.innerWidth + 100 : -100;
				const endY = 100 + Math.random() * (window.innerHeight * 0.4);

				// Random mid points for curved path
				const midX1 = window.innerWidth * (0.2 + Math.random() * 0.3);
				const midY1 = startY + (Math.random() - 0.5) * 200;
				const midX2 = window.innerWidth * (0.5 + Math.random() * 0.3);
				const midY2 = endY + (Math.random() - 0.5) * 200;

				// Set initial position
				quadcopter.style.left = startX + 'px';
				quadcopter.style.top = startY + 'px';
				quadcopter.classList.add('active');

				// Duration between 8-12 seconds
				const duration = 8000 + Math.random() * 4000;
				const startTime = Date.now();

				function animate() {
					const elapsed = Date.now() - startTime;
					const progress = Math.min(elapsed / duration, 1);

					// Bezier curve for smooth path
					const t = progress;
					const t2 = t * t;
					const t3 = t2 * t;
					const mt = 1 - t;
					const mt2 = mt * mt;
					const mt3 = mt2 * mt;

					const x = mt3 * startX +
							  3 * mt2 * t * midX1 +
							  3 * mt * t2 * midX2 +
							  t3 * endX;

					const y = mt3 * startY +
							  3 * mt2 * t * midY1 +
							  3 * mt * t2 * midY2 +
							  t3 * endY;

					quadcopter.style.left = x + 'px';
					quadcopter.style.top = y + 'px';

					if (progress < 1) {
						requestAnimationFrame(animate);
					} else {
						// Fade out
						quadcopter.classList.remove('active');

						// Schedule next flight (30-90 seconds)
						const nextFlight = 30000 + Math.random() * 60000;
						setTimeout(flyDrone, nextFlight);
					}
				}

				animate();
			}

			// First flight after 3-5 seconds
			setTimeout(flyDrone, 3000 + Math.random() * 2000);
		}

		// UFO flight animation (separate, parallel)
		const ufo = document.getElementById('ufo');
		const robotWalker = document.getElementById('robotWalker');

		if (ufo && robotWalker) {
			function flyUFO() {
				// Random start position
				const startX = Math.random() < 0.5 ? -100 : window.innerWidth + 100;
				const startY = 100 + Math.random() * (window.innerHeight * 0.4);

				// Random end position (opposite side)
				const endX = startX < 0 ? window.innerWidth + 100 : -100;
				const endY = 100 + Math.random() * (window.innerHeight * 0.4);

				// Random mid points for curved path
				const midX1 = window.innerWidth * (0.2 + Math.random() * 0.3);
				const midY1 = startY + (Math.random() - 0.5) * 200;
				const midX2 = window.innerWidth * (0.5 + Math.random() * 0.3);
				const midY2 = endY + (Math.random() - 0.5) * 200;

				// Set initial position
				ufo.style.left = startX + 'px';
				ufo.style.top = startY + 'px';
				ufo.classList.add('active');

				// Duration between 8-12 seconds
				const duration = 8000 + Math.random() * 4000;
				const startTime = Date.now();
				let beamActivated = false;

				function animate() {
					const elapsed = Date.now() - startTime;
					const progress = Math.min(elapsed / duration, 1);

					// Bezier curve for smooth path
					const t = progress;
					const t2 = t * t;
					const t3 = t2 * t;
					const mt = 1 - t;
					const mt2 = mt * mt;
					const mt3 = mt2 * mt;

					const x = mt3 * startX +
							  3 * mt2 * t * midX1 +
							  3 * mt * t2 * midX2 +
							  t3 * endX;

					const y = mt3 * startY +
							  3 * mt2 * t * midY1 +
							  3 * mt * t2 * midY2 +
							  t3 * endY;

					ufo.style.left = x + 'px';
					ufo.style.top = y + 'px';

					// Check if UFO is above the robot walker
					if (!beamActivated) {
						const robotRect = robotWalker.getBoundingClientRect();
						const ufoX = x;
						const robotX = robotRect.left + robotRect.width / 2;

						// If UFO is horizontally aligned with robot (within 100px)
						if (Math.abs(ufoX - robotX) < 100) {
							beamActivated = true;

							// Activate beam
							ufo.classList.add('beam-active');
							robotWalker.classList.add('beamed');

							// Deactivate after 3 seconds
							setTimeout(() => {
								ufo.classList.remove('beam-active');
								robotWalker.classList.remove('beamed');
							}, 3000);
						}
					}

					if (progress < 1) {
						requestAnimationFrame(animate);
					} else {
						// Fade out
						ufo.classList.remove('active');
						ufo.classList.remove('beam-active');

						// Schedule next flight (10-30 seconds)
						const nextFlight = 10000 + Math.random() * 20000;
						setTimeout(flyUFO, nextFlight);
					}
				}

				animate();
			}

			// First UFO flight after 5-8 seconds
			setTimeout(flyUFO, 5000 + Math.random() * 3000);
		}

		// Rotating punchy texts synced with carousel
		const punchyTexts = [
			"Anything. Everything. #Undefined.",
			"You're in #undefined territory.",
			"Design. Build. Code. Redefine.",
			"Impossible? Not here!",
			"Define your limits. #Undefined breaks 'em.",
			"KISS? Nah. Copycats? LoL.",
			"#19112. Emergency response team! #1 #911 #112",
			"Coopertition FTW!"
		];

		const punchyTextElement = document.getElementById('punchyText');
		let currentPunchyIndex = 0;

		function rotatePunchyText() {
			if (punchyTextElement) {
				// Fade out
				punchyTextElement.style.opacity = '0';

				setTimeout(() => {
					// Change text
					currentPunchyIndex = (currentPunchyIndex + 1) % punchyTexts.length;
					punchyTextElement.textContent = punchyTexts[currentPunchyIndex];

					// Fade in
					punchyTextElement.style.opacity = '1';
				}, 500);
			}
		}

		// Rotate text every 4 seconds (synced with carousel autoplay)
		setInterval(rotatePunchyText, 4000);
	</script>

